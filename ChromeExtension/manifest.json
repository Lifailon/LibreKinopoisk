{
  "manifest_version": 3,
  "name": "Свободный поиск кино",
  "version": "5.7.4",
  "author": "Lifailon",
  "homepage_url": "https://github.com/Lifailon/LibreKinopoisk",
  "description": "Расширение для быстрого поиска фильмов и сериалов в открытых источниках.",
  "icons": {
    "32": "icons/icon32.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png",
    "256": "icons/icon256.png",
    "512": "icons/icon512.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Настройки расширения Libre Kinopoisk",
    "default_icon": {
      "32": "icons/icon32.png",
      "64": "icons/icon64.png",
      "128": "icons/icon128.png",
      "256": "icons/icon256.png",
      "512": "icons/icon512.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.kinopoisk.ru/*",
        "https://kinopoisk.ru/*",
        "https://hd.kinopoisk.ru/*",
        "https://www.hd.kinopoisk.ru/*"
      ],
      "js": [
        "main.js",
        "kinobox.min.js"
      ],
      "all_frames": false,
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*",
        "kinobox.min.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs",
    "webNavigation",
    "contextMenus"
  ],
  "host_permissions": [
    "https://kinopoisk.ru/*",
    "https://www.kinopoisk.ru/*",
    "https://hd.kinopoisk.ru/*",
    "https://www.hd.kinopoisk.ru/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-interface": {
      "suggested_key": {
        "default": "Ctrl+Shift+F"
      },
      "description": "Toggle the extension interface"
    }
  }
}