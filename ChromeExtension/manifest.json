{
  "manifest_version": 3,
  "name": "Открытый Кинопоиск",
  "version": "5.1.0",
  "author": "Lifailon",
  "description": "Добавляет кнопки на сайте kinopoisk.ru для поиска фильмов и сериалов в открытых ресурсах.",
  "icons": {
    "32": "icons/icon32.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png",
    "256": "icons/icon256.png",
    "512": "icons/icon512.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.kinopoisk.ru/*",
        "https://kinopoisk.ru/*",
        "https://www.hd.kinopoisk.ru/*",
        "https://hd.kinopoisk.ru/*"
      ],
      "js": [
        "main.js"
      ],
      "all_frames": false,
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/icons/*"
      ],
      "matches": [
        "https://www.kinopoisk.ru/*",
        "https://kinopoisk.ru/*",
        "https://www.hd.kinopoisk.ru/*",
        "https://hd.kinopoisk.ru/*"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*.kinopoisk.ru/*"
  ]
}